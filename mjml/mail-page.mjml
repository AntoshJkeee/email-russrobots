<mjml>
	<mj-head>
		<mj-title>Письма направляемые с сайта посетителям</mj-title>
		<mj-attributes>
			<mj-text padding="0" font-family="Verdana" font-size="14px" line-height="21px" color="#1F2427" font-weight="500" />
			<mj-section padding="0" />
			<mj-divider padding="0" />
			<mj-image padding="0" />
			<mj-class name="footer-bg" background-color="#77787B" />
			<mj-class name="footer-text" font-size="14px" line-height="20px" align="center" />
		</mj-attributes>
		<mj-style inline="inline">.yandex-width {
			width: 295px !important;
			}
			.header-top {
			padding: 45px 45px 0 45px;
			height: 180px;
